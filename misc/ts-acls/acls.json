// vim:ft=jsonc sw=2 ts=2 et
{
  "groups": {
    // Control Groups
    "group:ctl-k8s":    ["hayden@hayden.moe", "haydenuwu@passkey"],
    "group:ctl-phoebe": ["hayden@hayden.moe", "haydenuwu@passkey"],
    "group:ctl-tethys": ["hayden@hayden.moe", "haydenuwu@passkey"],
    "group:ctl-dione":  ["hayden@hayden.moe", "haydenuwu@passkey"],

    // Locales
    "group:loc-ema": ["hayden@hayden.moe", "haydenuwu@passkey"],
    "group:loc-lhr": ["hayden@hayden.moe", "haydenuwu@passkey"],
    "group:loc-cdg": ["hayden@hayden.moe", "haydenuwu@passkey"],

    // Teams
    "group:team-eng":   ["hayden@hayden.moe", "haydenuwu@passkey"],
    "group:team-infra": ["hayden@hayden.moe", "haydenuwu@passkey"],
  },

  "ipsets": {
    // Clusters
    "ipset:k8s-phoebe": [
      "10.96.0.0/12",
      "10.244.0.0/16",
    ],

    // Locales
    "ipset:net-phoebe": ["192.168.0.0/16"],
  },

  "grants": [
    {
      // Allow net access to UK teams
      "src": ["group:loc-ema"],
      "dst": ["tag:net-phoebe", "ipset:net-phoebe"],
      "ip":  ["*"],
    },

    {
      // Allow net access to UK teams
      "src": ["group:loc-lhr"],
      "dst": ["tag:net-dione"],
      "ip":  ["*"],
    },

    {
      // Allow net access to FR teams
      "src": ["group:loc-cdg"],
      "dst": ["tag:net-tethys"],
      "ip":  ["*"],
    },

    {
      // Allow Exit Node access to `loc-ema` teams
      "src": ["group:loc-ema"],
      "dst": ["autogroup:internet"],
      "via": ["tag:eno-phoebe"],
      "ip":  ["*"],
    },

    // Kubernetes Cluster Access
    {
      // Enforce session recording on all clusters
      "src": ["*"],
      "dst": ["tag:k8s"],
      "app": {
        "tailscale.com/cap/kubernetes": [{
          "recorder":        ["tag:app-tsrecorder"],
          "enforceRecorder": true,
        }],
      },
    },
    
    {
      // Allow Phoebe subnet access to admins
      "src": ["group:ctl-phoebe"],
      "dst": ["ipset:k8s-phoebe"],
      "ip": ["*"],
    },

    {
      // Give Phoebe-specific Kubernetes API access to k8s admins
      "src": ["group:ctl-phoebe"],
      "dst": ["tag:k8s-phoebe"],
      "app": {
        "tailscale.com/cap/kubernetes": [{
          "impersonate": {
            "groups": ["system:masters"],
          },
        }],
      },
    },

    {
      // Give Kubernetes API access to k8s admins
      "src": ["group:ctl-k8s"],
      "dst": ["tag:k8s"],
      "app": {
        "tailscale.com/cap/kubernetes": [{
          "impersonate": {
            "groups": ["system:masters"],
          },
        }],
      },
    },
  ],

  "ssh": [
    {
      // Allow Phoebe admins to SSH into any Phoebe servers
      "action":          "check",
      "src":             ["group:ctl-phoebe"],
      "dst":             ["tag:net-phoebe"],
      "users":           ["root", "autogroup:nonroot"],
      "recorder":        ["tag:app-tsrecorder"],
      "enforceRecorder": true,
    },

    {
      // Allow Tethys admins to SSH into any Tethys servers
      "action":          "check",
      "src":             ["group:ctl-tethys"],
      "dst":             ["tag:net-tethys"],
      "users":           ["root", "autogroup:nonroot"],
      "recorder":        ["tag:app-tsrecorder"],
      "enforceRecorder": true,
    },

    {
      // Allow Dione admins to SSH into any Dione servers
      "action":          "check",
      "src":             ["group:ctl-dione"],
      "dst":             ["tag:net-dione"],
      "users":           ["root", "autogroup:nonroot"],
      "recorder":        ["tag:app-tsrecorder"],
      "enforceRecorder": true,
    },
  ],

  "tagowners": {
    // Networks
    "tag:net-phoebe": ["group:team-infra"],
    "tag:net-tethys": ["group:team-infra"],
    "tag:net-dione":  ["group:team-infra"],

    // Exit Nodes
    "tag:eno-phoebe": ["group:team-infra"],

    // Applications
    "tag:app-tsrecorder": ["tag:k8s", "group:team-infra"],

    // Clusters
    "tag:k8s":        ["group:ctl-k8s", "group:team-infra"],
    "tag:k8s-phoebe": ["tag:k8s"],
  },
}
